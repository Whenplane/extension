{
  "manifest_version": 3,
  "name": "Whenplane Floatplane Widget",
  "short_name": "Whenplane FP",
  "version": "1.0.2",

  "description": "Replaces the floatplane offline box with a countdown from Whenplane",
  "homepage_url": "https://whenplane.com/extension",

  "action": {
    "default_popup": "about.html"
  },

  "icons": {
    "128": "icons/wan-128.png",
    "200": "icons/wan.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.floatplane.com/*"],
      "js": ["inserter.js"],
      "css": ["whenplane_styles.css"]
    }
  ]
}
